RewriteEngine On
RewriteRule    ^$                                               pages/index.php [L]
RewriteRule    ^([A-Za-z_]+)$                                   pages/$1.php                   [NC]    # Handle pages
RewriteRule    ^columns/([A-Za-z]+)$                            pages/columns/$1/index.php     [NC] 
RewriteRule    ^columns/([A-Za-z]+)/([0-9]+)/([0-9]+)/([0-9]+)$ pages/columns/$1/$2/$3/$4.php [NC]    # Handle articles
RewriteRule ^articles/([A-Za-z]+)/([0-9]+)/([0-9]+)/([0-9]+)/([A-Za-z\-]+)$ pages/article.php?column=$1&year=$2&month=$3&date=$4&name=$5